

<div class = "user-show">
  <% if @user.image? %>
    <img src = <%= @user.image %> class = "icon_image">
  <% else %>
   <!--  <img src="no-image.jpeg"> -->
   <%= image_tag 'no-image.jpeg' ,class: "icon_image"%>
  <% end %>
  <div class = "user-show__right">
    <div class = "user-show__right__name">
      <%= @user.name %>
    </div>
    <div class = "user-show__right__profile">
      まだ実装してません。まだ実装してません。まだ実装してません。まだ実装してません。

    </div>
    <input class = "action btn pink lighten-3" type="button" value = "変更">
  </div>
</div>

<div class = "review-zone" >
  <div class = "reviews">
    <h3><%= @user.name %> さんの声</h3>
      <% if @reviews %>
        <% @reviews.each do |review| %>
        <div class = "review">
          <%= link_to review.user.name, "/users/#{@user.id}"%>
          <p><%= review.text  %>
            <%= link_to "放送日:#{review.product.date}", "/products/#{review.product.id}",class: "review__link" %></p>
        </div>
      <% end %>
    <% end %>
