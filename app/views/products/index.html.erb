<div class = "serch">

  <%= form_tag(root_path, method: :get) do %>
  <input class="search__input" name="keyword" placeholder="日付で検索" type="text" >
  <% end %>
</div>

<div class = "products">

<% @products.each do |product| %>
  <%= render :partial => "product", :locals => { product: product } %>
<% end %>
</div>

<div class = "paginate">
  <%= paginate @products %>
</div>
