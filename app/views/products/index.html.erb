<div class = "serch">

  <%= search_form_for @q, url: root_path  do |f| %>
    <%= f.label :日付で検索する %>
    <%= f.search_field :date_cont %>
    <input class="action btn pink lighten-3" type = "submit" name ="commit" value="検索">
  <% end %>
</div>

<div class = "items">

<% @products.each do |product| %>

  <div class = "item">
    <div class = "item__image">
      <a href="/products/<%=product.id%>"><img src=<%= product.image_url %> class="activator" ></a>
    </div>
    <div class = "item__bottom">
      <div class = "item__bottom__title">
        <a><%= link_to product.title, product_path(product.id) %></a>
      </div>
      <div class = "item__bottom__time">
        <a><%= product.date%></a>
      </div>
    </div>
  </div>
<% end %>

<%= paginate @products %>

</div>
